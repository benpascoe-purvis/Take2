{
  "name": "Take2",
  "description": "Take 2 - Find sustainable alternatives while online shopping.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Find alternatives",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.theiconic.com.au/*"],
  "content_scripts": [
    {
      "matches": ["https://www.theiconic.com.au/*"],
      "js": ["content-scripts/scraper.js"],
      "all_frames": true,
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
